# Production Environment Variables Template
# Copy this to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# OpenAI API (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# AWS Credentials for Amazon Textract (OPTIONAL)
# If not provided, app will use Tesseract OCR only
# AWS_ACCESS_KEY_ID=your_aws_access_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your_s3_bucket_name_here

# Railway Configuration
PORT=5000

# Optional: Force disable Textract (use Tesseract only)
# DISABLE_TEXTRACT=true

# Optional: Disable Tesseract if not needed
# DISABLE_TESSERACT=false